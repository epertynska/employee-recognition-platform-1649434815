<h1>Kudos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><strong><%= kudo.title %></strong></td>
        <td><i><%= kudo.content %></i></td>
        <td><%= kudo.giver.email.split("@")[0].capitalize %></td>
        <td><%= kudo.receiver.email.split("@")[0].capitalize %></td>
        <td><%= link_to 'Show', kudo %></td>
        <% if kudo.giver.id == current_employee.id || current_employee.admin? %>
          <td><%= link_to 'Edit', edit_kudo_path(kudo) %></td>
          <td><%= link_to 'Delete', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kudo', new_kudo_path %>
